<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        android:title="Home Screen"
        android:summary="Customize the home screen"
        app:fragment="com.graymatterapps.dualitylauncher.SettingsHomeFragment" />
    <Preference
        android:title="Folders"
        android:summary="Customize folders"
        app:fragment="com.graymatterapps.dualitylauncher.SettingsFolder" />
    <Preference
        android:title="App Drawer"
        android:summary="Customize the app drawer"
        app:fragment="com.graymatterapps.dualitylauncher.SettingsDrawerFragment" />
    <Preference
        android:title="Status Bar"
        android:summary="Customize the status bar"
        app:fragment="com.graymatterapps.dualitylauncher.SettingsStatusBarFragment" />
    <Preference
        android:title="Navigation Bar"
        android:summary="Customize the navigation bar"
        app:fragment="com.graymatterapps.dualitylauncher.SettingsNavBarFragment" />
    <Preference
        android:key="auto_color"
        android:title="Automatic Color Scheme"
        android:summary="Automatically sets Dock, Dock Search, Folder and App Drawer colors to the wallpapers primary color" />
    <SeekBarPreference
        android:defaultValue="200"
        android:key="auto_color_alpha"
        android:max="255"
        android:summary="Alpha value to use when setting automatic colors"
        android:title="Automatic Color Alpha"
        app:min="0"
        app:showSeekBarValue="true" />
    <Preference
        android:title="Wallpaper"
        android:summary="Set the wallpaper"
        app:fragment="com.graymatterapps.dualitylauncher.SettingsWallpaperFragment" />

    <PreferenceCategory>
        <Preference
            android:title="Developer Tools"
            android:summary="Here be dragons..."
            app:fragment="com.graymatterapps.dualitylauncher.SettingsDeveloper"/>
    </PreferenceCategory>

</androidx.preference.PreferenceScreen>