<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <us.graymatterapps.dualitylauncher.ColorPreference
        android:defaultValue="-16777216"
        android:key="app_drawer_background"
        android:title="@string/pref_app_drawer_background" />
    <us.graymatterapps.dualitylauncher.ColorPreference
        android:defaultValue="-1"
        android:key="app_drawer_text"
        android:title="@string/pref_app_drawer_text" />
    <us.graymatterapps.dualitylauncher.ColorPreference
        android:defaultValue="-16777216"
        android:key="app_drawer_text_shadow"
        android:title="@string/pref_app_drawer_text_shadow" />
    <SeekBarPreference
        android:defaultValue="14"
        android:key="drawer_text_size"
        android:max="30"
        app:min="5"
        android:title="Text size"
        app:showSeekBarValue="true"/>
    <SeekBarPreference
        android:defaultValue="6"
        android:key="app_drawer_columns"
        android:max="8"
        app:min="4"
        android:title="Number of columns"
        app:showSeekBarValue="true"/>
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="app_drawer_nav_status_sync"
        android:summary="Synchronize navigation and status bar backgrounds with the app drawer background when open."
        android:title="Sync bars with drawer when open" />
    <SeekBarPreference
        android:defaultValue="5"
        android:key="drawer_icon_padding"
        android:max="20"
        app:min="0"
        android:title="Icon padding"
        android:summary="Adjusts icon padding to change the size of the icons"
        app:showSeekBarValue="true"/>
</PreferenceScreen>